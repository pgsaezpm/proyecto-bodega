<odoo>
  <data>
    <!-- Vista de lista -->
    <record model="ir.ui.view" id="modulo.modelo_list">
      <field name="name">Modelo (Lista)</field>
      <field name="model">modulo.modelo</field>
      <field name="arch" type="xml">
        <list>
          <field name="campo" />
          <field name="campo_calculado" />
        </list>
      </field>
    </record>

    <!-- Vista de formulario -->
    <record model="ir.ui.view" id="odulo.modelo_form">
      <field name="name">Modelo (Formulario)</field>
      <field name="model">modulo.modelo</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="campo" />
              <field name="campo_calculado" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Acción de ventana -->
    <record model="ir.actions.act_window" id="modulo.modelo_action_window">
      <field name="name">Modelos</field>
      <field name="res_model">modulo.modelo</field>
      <field name="view_mode">list,form</field>
      <!-- <field name="domain">['campo', '=', 100]</field> -->
    </record>

    <!-- Menú principal -->
    <menuitem name="Menú" id="modulo.root_menu"/>

    <!-- Submenú -->
    <menuitem name="Submenu" id="modulo.modelo_submenu" parent="modulo.root_menu"/>

    <!-- Elemento de menú con acción -->
    <menuitem name="Modelos" id="modulo.modelo_menu" parent="modulo.modelo_submenu" action="modulo.modelo_action_window"/>
  </data>
</odoo>
