<odoo>
  <data>
    <!-- Vista de lista -->
    <record model="ir.ui.view" id="pgs_bodega.denominacion_origen_list">
      <field name="name">Denominacion Origen (Lista)</field>
      <field name="model">pgs_bodega.denominacion_origen</field>
      <field name="arch" type="xml">
        <list>
          <field name="id_denominacion" />
          <field name="nombre" />
          <field name="variedad_uva" />
        </list>
      </field>
    </record>

    <!-- Vista de formulario -->
    <record model="ir.ui.view" id="pgs_bodega.denominacion_origen_form">
      <field name="name">Denominacion Origen (Formulario)</field>
      <field name="model">pgs_bodega.denominacion_origen</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="id_denominacion" />
              <field name="nombre" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Acción de ventana -->
    <record model="ir.actions.act_window" id="pgs_bodega.denominacion_origen_action_window">
      <field name="name">Denominacion Origen</field>
      <field name="res_model">pgs_bodega.denominacion_origen</field>
      <field name="view_mode">list</field>
      <!-- <field name="domain">['campo', '=', 100]</field> -->
    </record>

    <!-- Submenú -->
    <menuitem name="Denominacion Origen" id="pgs_bodega.denominacion_origen_submenu" parent="pgs_bodega.root_menu" action="pgs_bodega.denominacion_origen_action_window"/>

  </data>
</odoo>