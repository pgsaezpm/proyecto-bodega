<odoo>
  <data>

    <!-- Vista de formulario -->
    <record id="res_partner_form_inherit_producto_uva" model="ir.ui.view">
      <field name="name">res.partner.form.inherit.producto_uva</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//page[@name='general_information']/group" position="inside">
          <group>
            <field name="es_producto_uva" string="Es producto uva"/>
            <field name="tipo_producto" invisible="es_producto_uva==False"/>
          </group>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
