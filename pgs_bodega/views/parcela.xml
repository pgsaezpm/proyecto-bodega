<odoo>
  <data>
    <!-- Vista de lista -->
    <record model="ir.ui.view" id="pgs_bodega.parcela_list">
      <field name="name">Parcela (Lista)</field>
      <field name="model">pgs_bodega.parcela</field>
      <field name="arch" type="xml">
        <list>
          <field name="id_parcela" />
          <field name="nombre" />
          <field name="provincia" />
          <field name="tamanio_hectareas" />
        </list>
      </field>
    </record>

    <!-- Vista de formulario -->
    <record model="ir.ui.view" id="pgs_bodega.parcela_form">
      <field name="name">Parcela (Formulario)</field>
      <field name="model">pgs_bodega.parcela</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="id_parcela" />
              <field name="nombre" />
              <field name="provincia"/>
              <field name="tamanio_hectareas" />
              <field name="variedad_uva" />
              <field name="localidad"/>
              <field name="viticultor_propietario" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Acción de ventana -->
    <record model="ir.actions.act_window" id="pgs_bodega.parcela_action_window">
      <field name="name">Parcela</field>
      <field name="res_model">pgs_bodega.parcela</field>
      <field name="view_mode">list,form</field>
      <!-- <field name="domain">['campo', '=', 100]</field> -->
    </record>


    <!-- Submenú -->
    <menuitem name="Parcela" id="pgs_bodega.parcela_submenu" parent="pgs_bodega.root_menu" action="pgs_bodega.parcela_action_window"/>

  </data>
</odoo>