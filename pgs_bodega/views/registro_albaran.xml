<odoo>
  <data>
    <!-- Vista de lista -->
    <record model="ir.ui.view" id="pgs_bodega.registro_albaran_list">
      <field name="name">Registro albaran (Lista)</field>
      <field name="model">pgs_bodega.registro_albaran</field>
      <field name="arch" type="xml">
        <list>
          <field name="id_registro" />
          <field name="hora_registro" />
          <field name="calidad_uva" />
          <field name="peso_neto" />
        </list>
      </field>
    </record>

    <!-- Vista de formulario -->
    <record model="ir.ui.view" id="pgs_bodega.registro_albaran_form">
      <field name="name">Registro albaran (Formulario)</field>
      <field name="model">pgs_bodega.registro_albaran</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="id_registro" />
              <field name="viticultor_propietario" widget="many2many_tags"/>
              <field name="hora_registro" readonly='True'/>
              <field name="parcela" widget="many2many_tags" domain="[('viticultor_propietario', '=', viticultor_propietario)]"/>
              <field name="tara" />
              <field name="peso_bruto"/>
              <field name="peso_neto" />
              <field name="calidad_uva" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Acción de ventana -->
    <record model="ir.actions.act_window" id="pgs_bodega.registro_albaran_action_window">
      <field name="name">Registro albaran</field>
      <field name="res_model">pgs_bodega.registro_albaran</field>
      <field name="view_mode">list,form</field>
      <!-- <field name="domain">['campo', '=', 100]</field> -->
    </record>


    <!-- Submenú -->
    <menuitem name="Registro albaran" id="pgs_bodega.registro_albaran_submenu" parent="pgs_bodega.root_menu" action="pgs_bodega.registro_albaran_action_window"/>

  </data>
</odoo>