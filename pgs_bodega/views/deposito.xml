<odoo>
  <data>
    <!-- Vista de lista -->
    <record model="ir.ui.view" id="pgs_bodega.deposito_list">
      <field name="name">Deposito (Lista)</field>
      <field name="model">pgs_bodega.deposito</field>
      <field name="arch" type="xml">
        <list>
          <field name="id_deposito" />
          <field name="nombre" />
          <field name="capacidad" />
        </list>
      </field>
    </record>

    <!-- Vista de formulario -->
    <record model="ir.ui.view" id="pgs_bodega.deposito_form">
      <field name="name">Deposito (Formulario)</field>
      <field name="model">pgs_bodega.deposito</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="id_deposito" />
              <field name="nombre" />
              <field name="capacidad"/>
              <field name="tipo_producto" />
              <field name="producto" domain="[('product_tmpl_id.tipo_producto', '=', tipo_producto)]"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Acción de ventana -->
    <record model="ir.actions.act_window" id="pgs_bodega.deposito_action_window">
      <field name="name">Deposito</field>
      <field name="res_model">pgs_bodega.deposito</field>
      <field name="view_mode">list,form</field>
      <!-- <field name="domain">['campo', '=', 100]</field> -->
    </record>


    <!-- Submenú -->
    <menuitem name="Deposito" id="pgs_bodega.deposito_submenu" parent="pgs_bodega.root_menu" action="pgs_bodega.deposito_action_window"/>

  </data>
</odoo>