<odoo>
  <data>
    <!-- Vista de lista -->
    <record model="ir.ui.view" id="pgs_bodega.variedad_uva_list">
      <field name="name">Variedad Uva (Lista)</field>
      <field name="model">pgs_bodega.variedad_uva</field>
      <field name="arch" type="xml">
        <list>
          <field name="id_variedad" />
          <field name="nombre_variedad" />
          <field name="denominacion_origen" />
          <field name="rendimiento_denominacion_origen" />
        </list>
      </field>
    </record>

    <!-- Vista de formulario -->
    <record model="ir.ui.view" id="pgs_bodega.variedad_uva_form">
      <field name="name">Variedad Uva (Formulario)</field>
      <field name="model">pgs_bodega.variedad_uva</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="id_variedad" />
              <field name="nombre_variedad"/>
              <field name="denominacion_origen" widget="many2many_tags"/>
              <field name="rendimiento_denominacion_origen" />
              <field name="producto_inicial1" />
              <field name="producto_sig_inicial2" />
              <field name="producto_sig3" />
              <field name="grado_brix" />
              <field name="grado_probable" readonly="True"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Acción de ventana -->
    <record model="ir.actions.act_window" id="pgs_bodega.variedad_uva_action_window">
      <field name="name">Variedad Uva</field>
      <field name="res_model">pgs_bodega.variedad_uva</field>
      <field name="view_mode">list,form</field>
      <!-- <field name="domain">['campo', '=', 100]</field> -->
    </record>

    <!-- Menú principal -->
    <menuitem name="Bodega" id="pgs_bodega.root_menu"/>

    <!-- Submenú -->
    <menuitem name="Variedad Uva" id="pgs_bodega.variedad_uva_submenu" parent="pgs_bodega.root_menu" action="pgs_bodega.variedad_uva_action_window"/>

  </data>
</odoo>