<odoo>
  <data>
    <!-- Vista de lista -->
    <record model="ir.ui.view" id="gimnasio.suscripcion_list">
      <field name="name">Suscripcion (Lista)</field>
      <field name="model">gimnasio.suscripcion</field>
      <field name="arch" type="xml">
        <list>
          <field name="display_name" nolabel="True"/>
          <field name="precio" />
          <field name="moneda" invisible="True" nolabel="True"/>
          <field name="duracion" />
        </list>
      </field>
    </record>

    <!-- Vista de formulario -->
    <record model="ir.ui.view" id="gimnasio.suscripcion_form">
      <field name="name">Suscripcion (Formulario)</field>
      <field name="model">gimnasio.suscripcion</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <h1>
              <field name="display_name" />
            </h1>
            <group>
              <field name="nombre" />
              <field name="precio" />
              <field name="duracion" />
              <field name="moneda" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Acción de ventana -->
    <record model="ir.actions.act_window" id="gimnasio.suscripcion_action_window">
      <field name="name">Suscripciones</field>
      <field name="res_model">gimnasio.suscripcion</field>
      <field name="view_mode">list,form</field>
      <!-- <field name="domain">['campo', '=', 100]</field> -->
    </record>

    <!-- Elemento de menú con acción -->
    <menuitem name="Suscripcion" id="gimnasio.suscripcion_menu" parent="gimnasio.menu_root" action="gimnasio.suscripcion_action_window"/>
  </data>
</odoo>
