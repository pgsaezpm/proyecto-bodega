<odoo>
  <data>
    <!-- Vista de lista -->
    <record model="ir.ui.view" id="gimnasio.entrenador_list">
      <field name="name">Entrenador (Lista)</field>
      <field name="model">gimnasio.entrenador</field>
      <field name="arch" type="xml">
        <list>
          <field name="display_name" nolabel="True"/>
          <field name="dni" />
          <field name="email"/>
          <field name="telefono" />
          <field name="clases" />
        </list>
      </field>
    </record>

    <!-- Vista de formulario -->
    <record model="ir.ui.view" id="gimnasio.entrenador_form">
      <field name="name">Entrenador (Formulario)</field>
      <field name="model">gimnasio.entrenador</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <h1>
              <field name="display_name" />
            </h1>
            <group>
              <field name="nombre" />
              <field name="apellido_1" />
              <field name="apellido_2" />
              <field name="dni" />
              <field name="email"/>
              <field name="telefono" />
              <field name="clases" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Acción de ventana -->
    <record model="ir.actions.act_window" id="gimnasio.entrenador_action_window">
      <field name="name">Entrenadores</field>
      <field name="res_model">gimnasio.entrenador</field>
      <field name="view_mode">list,form</field>
      <!-- <field name="domain">['campo', '=', 100]</field> -->
    </record>

    <!-- Elemento de menú con acción -->
    <menuitem name="Entrenador" id="gimnasio.entrenador_menu" parent="gimnasio.menu_root" action="gimnasio.entrenador_action_window"/>
  </data>
</odoo>
